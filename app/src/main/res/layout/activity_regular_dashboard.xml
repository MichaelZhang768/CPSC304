<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="Regular User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username: "
        android:textSize="18sp"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Account Balance:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/balanceTextView"
        android:textSize="18sp"
        android:layout_below="@+id/usernameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Add Balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addBalanceTextView"
        android:layout_marginTop="73dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@+id/balanceTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Amount To Add:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountToAddTextView"
        android:textSize="18sp"
        android:layout_below="@+id/addBalanceTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/amountToAddEditText"
        android:textSize="18sp"
        android:numeric="decimal"
        android:layout_below="@+id/addBalanceTextView"
        android:layout_toRightOf="@+id/amountToAddTextView"
        android:layout_toEndOf="@+id/amountToAddTextView" />

    <Button
        android:text="Ok"
        android:id="@+id/addBalanceButton"
        android:textSize="26sp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/amountToAddTextView"
        android:layout_toLeftOf="@+id/amountToAddEditText"
        android:layout_toStartOf="@+id/amountToAddEditText"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

</RelativeLayout>