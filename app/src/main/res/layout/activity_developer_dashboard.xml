<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_developer_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ubc.cpsc304.activities.DeveloperDashboardActivity">

    <TextView
        android:text="Developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Username:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/usernameTextView"
        android:textSize="18sp" />

    <TextView
        android:text="Email: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailTextView"
        android:textSize="18sp"
        android:layout_below="@+id/usernameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/descriptionTextView"
        android:textSize="18sp" />

    <Button
        android:text="Show Friends"
        android:layout_marginTop="13dp"
        android:id="@+id/friendsButton"
        android:textSize="12sp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/descriptionTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Show Users"
        android:layout_height="50dp"
        android:id="@+id/showAllUsersButton"
        android:layout_width="50dp"
        android:textSize="12sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignBaseline="@+id/friendsButton"
        android:layout_alignBottom="@+id/friendsButton"
        android:layout_toRightOf="@+id/usernameTextView"
        android:layout_toEndOf="@+id/usernameTextView" />

    <Button
        android:text="Publish Game"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/publishButton"
        android:textSize="14sp"
        android:background="@android:color/holo_blue_bright"
        android:layout_alignTop="@+id/showAllUsersButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
